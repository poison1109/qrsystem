<% if current_user.admin_flag == 1 %>

<%= search_form_for @search do |f| %>
  <%= f.label :name, '名前' %>
  <%= f.text_field :name_cont %>
  <div><%= f.submit '検索' %></div>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@search, :id, 'ID') %></th>
      <th><%= sort_link(@search, :name, 'ユーザー名') %></th>
      <th><%= sort_link(@search, :corporation, '会社名') %></th>
      <th><%= sort_link(@search, :owner, '担当者名') %></th>
      <th><%= sort_link(@search, :email, 'メールアドレス') %></th>
      <th><%= sort_link(@search, :videos, '動画アップ数') %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.corporation %></td>
        <td><%= user.owner %></td>
        <td><%= user.email %></td>
        <td><%= user.videos.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<p class="navbar-text pull-right">
<% if user_signed_in? %>
  <strong><%= current_user.email %></strong>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
<% end %>