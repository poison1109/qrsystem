
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, :label => "メールアドレス" %>
    <%= f.input :password, required: false, :label => "パスワード" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "ログイン" %>
  </div>
<% end %>

